<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_clip_title"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/fragment_clip_broadcaster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_clip_title"/>
        <WebView
            android:id="@+id/fragment_clip_webview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_clip_broadcaster"
            app:layout_constraintDimensionRatio="1:1"/>

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:indeterminate="false"
            app:layout_constraintLeft_toLeftOf="@id/fragment_clip_webview"
            app:layout_constraintRight_toRightOf="@id/fragment_clip_webview"
            app:layout_constraintTop_toTopOf="@id/fragment_clip_webview"
            app:layout_constraintBottom_toBottomOf="@id/fragment_clip_webview"
            android:visibility="invisible"/>
    </android.support.constraint.ConstraintLayout>
</layout>